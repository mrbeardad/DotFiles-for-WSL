{
  "settingsSync.ignoredSettings": ["workbench.colorTheme"],

  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.hover.delay": 100,
  "editor.hover.hidingDelay": 0,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [100],
  "editor.smoothScrolling": true,
  "editor.tabSize": 4,
  "editor.unfoldOnClickAfterEndOfLine": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 5,
  "editor.fontFamily": "NerdCodePro",
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on"
  },
  "editor.suggest.preview": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggestSelection": "recentlyUsed",
  "editor.tabCompletion": "onlySnippets",

  "files.insertFinalNewline": true,

  "workbench.list.smoothScrolling": true,
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorCustomizations": {
    "[Noctis Sereno]": {
      "statusBar.foreground": "#b9d3d6",
      "statusBar.background": "#005f5f",
      "statusBar.debuggingForeground": "#a9c1c4",
      "statusBar.debuggingBackground": "#396336",
      "statusBarItem.hoverBackground": "#007d7d",
      "editor.findMatchBackground": "#40bf6acc",
      "editor.findMatchHighlightBackground": "#0e6571cc",
      "editorWidget.background": "#083d44cc"
    },
    "[Noctis Hibernus]": {
      "editorWidget.background": "#e0eff1bb"
    }
  },
  "workbench.colorTheme": "Noctis Sereno",
  "workbench.preferredDarkColorTheme": "Noctis Sereno",
  "workbench.preferredHighContrastColorTheme": "Noctis Sereno",
  "workbench.preferredHighContrastLightColorTheme": "Noctis Hibernus",
  "workbench.preferredLightColorTheme": "Noctis Hibernus",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.expandMode": "doubleClick",
  "workbench.view.alwaysShowHeaderActions": true,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.revealIfOpen": true,

  "window.autoDetectColorScheme": true,

  "explorer.confirmDelete": false,
  "explorer.excludeGitIgnore": true,

  "search.exclude": {
    "**/third_party": true,
    "**/3rd_party": true,
    "**/vendor": true
  },
  "search.showLineNumbers": true,
  "search.smartCase": true,

  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.mouseWheelScrollSensitivity": 0.2,
  "terminal.integrated.sendKeybindingsToShell": true,

  "problems.showCurrentInStatus": true,

  "security.workspace.trust.enabled": false,

  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  "vscode-neovim.ctrlKeysForInsertMode": [
    "a",
    // "c",
    "d",
    "h",
    "j",
    "o",
    "r",
    "t",
    "u",
    "w",
    // all above are default keys
    "e",
    "k",
    "n"
  ],
  "vscode-neovim.ctrlKeysForNormalMode": [
    "a",
    "b",
    // "c",
    "d",
    "e",
    "f",
    "h",
    "i",
    "j",
    "l",
    "o",
    "r",
    // "t",
    "u",
    "v",
    "w",
    "x",
    "y",
    // "z",
    "/",
    "]",
    "right",
    "left",
    "up",
    "down",
    "backspace",
    "delete",
    "n"
  ],

  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "cmake.configureOnOpen": false,
  "cmake.ignoreCMakeListsMissing": true,
  "cmake.options.statusBarVisibility": "icon",
  "cmake.showOptionsMovedNotification": false,
  "doxdocgen.generic.useGitUserEmail": true,
  "doxdocgen.generic.useGitUserName": true,

  "go.inlayHints.assignVariableTypes": true,
  "go.inlayHints.compositeLiteralFields": true,
  "go.inlayHints.compositeLiteralTypes": true,
  "go.inlayHints.constantValues": true,
  "go.inlayHints.functionTypeParameters": true,
  "go.inlayHints.parameterNames": true,
  "go.inlayHints.rangeVariableTypes": true,
  "go.lintTool": "golangci-lint",
  "go.toolsManagement.autoUpdate": true,

  "[dart]": {
    "editor.formatOnType": true
  },
  "dart.devToolsBrowser": "default",
  "dart.debugExternalPackageLibraries": true,

  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.terminal.executeInFileDir": true,
  "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],

  "javascript.format.enable": false,
  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.variableTypes.enabled": true,
  "typescript.format.enable": false,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "eslint.format.enable": false,

  "json.format.enable": false,
  "html.format.enable": false,
  "css.format.enable": false,
  "less.format.enable": false,
  "scss.format.enable": false,

  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "git.autofetch": true,
  "git.confirmSync": false,
  "gitlens.graph.layout": "editor",
  "gitlens.blame.ignoreWhitespace": true,
  "gitlens.statusBar.enabled": false,
  "gitlens.graph.minimap.additionalTypes": [
    "stashes",
    "tags",
    "localBranches",
    "remoteBranches"
  ],

  "todo-tree.general.showActivityBarBadge": true,
  "todo-tree.tree.flat": true,
  "todo-tree.tree.groupedByTag": true,
  "todo-tree.tree.tagsOnly": true,
  "todo-tree.filtering.ignoreGitSubmodules": true,
  "todo-tree.filtering.useBuiltInExcludes": "file and search excludes",
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS):",
  "todo-tree.general.tags": [
    "TODO",
    "PERF",
    "OPTIM",
    "FIX",
    "FIXIT",
    "FIXME",
    "BUG",
    "NOTE",
    "WARN",
    "WARNING",
    "XXX",
    "HACK"
  ],
  "todo-tree.general.tagGroups": {
    "PERF": ["PERF", "OPTIM"],
    "FIX": ["FIX", "FIXIT", "FIXME", "BUG"],
    "WARN": ["WARNING", "XXX"]
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "foreground": "#1a1b26",
      "background": "#0db9d7",
      "fontStyle": "italic",
      "icon": "check-circle",
      "iconColour": "#0db9d7",
      "gutterIcon": true
    },
    "PERF": {
      "foreground": "#1a1b26",
      "background": "#bb9af7",
      "fontStyle": "italic",
      "icon": "stopwatch",
      "iconColour": "#bb9af7",
      "gutterIcon": true
    },
    "FIX": {
      "foreground": "#ddd",
      "background": "#db4b4b",
      "fontStyle": "italic",
      "icon": "bug",
      "iconColour": "#db4b4b",
      "gutterIcon": true
    },
    "HACK": {
      "foreground": "#1a1b26",
      "background": "#e0af68",
      "fontStyle": "italic",
      "icon": "flame",
      "iconColour": "#e0af68"
    },
    "WARN": {
      "foreground": "#1a1b26",
      "background": "#e0af68",
      "fontStyle": "italic",
      "icon": "alert",
      "iconColour": "#e0af68"
    },
    "NOTE": {
      "foreground": "#1a1b26",
      "background": "#1abc9c",
      "fontStyle": "italic",
      "icon": "note",
      "iconColour": "#1abc9c"
    }
  },
  "settingsSync.ignoredExtensions": ["johnstoncode.svn-scm"]
}
